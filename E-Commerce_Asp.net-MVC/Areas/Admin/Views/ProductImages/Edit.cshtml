@model ProductImage

@{
    ViewData["Title"] = "Edit Product Image";
}

<hr />
<div class="row">
    <div class="col-md-4" enctype="multipart/form-data">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="file"/>
                <span asp-validation-for="Name" class="text-danger"></span>
                @if (Model.Name != null && !string.IsNullOrWhiteSpace(Model.Name))
                {
                    <img src="/Img/Products/@Model.Name" height="75" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbDeleteImage") Delete Image
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="Bottom" class="control-label"></label>
                <input asp-for="Bottom" class="form-control" />
                <span asp-validation-for="Bottom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

