@model IEnumerable<ProductImage>

@{
	ViewData["Title"] = "Product Images";
}


<p>
	<a asp-action="Create" class="btn btn-outline-primary">
		<i class="fa-solid fa-plus"></i> Create Add
	</a>
</p>
<table class="table table-striped table-hover" id="datatablesSimple">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Bottom)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Product)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a href="/Img/Products/@item.Name">
						<img src="/Img/Products/@item.Name" alt="" height="30" />
					</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Bottom)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Product.Name)
				</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a>
					<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i></a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
				</td>
			</tr>
		}
	</tbody>
</table>
@section Scripts {

	<script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
	<script src="/admin/js/datatables-simple-demo.js"></script>
}
